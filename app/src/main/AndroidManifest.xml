<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lbcc.a9_box_puzzle">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo9box"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo9box"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lbcc.a9_box_puzzle.solution"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>
        <activity
            android:name=".setDifficulty"
            android:configChanges="orientation"
            android:label="@string/DIFFICULTY"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>
        <activity
            android:name=".instructions"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lbcc.a9_box_puzzle.performanceActivity"
            android:label="@string/leaderboard"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>
        <activity
            android:name="com.lbcc.a9_box_puzzle.game"
            android:label="Good Luck!"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".info"
            android:label="@string/info"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>