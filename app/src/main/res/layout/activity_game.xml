<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/gamescrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backgroundcanva"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="end">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/backroot">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitecard"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            >
            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/backroot"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/whitecard"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/best"/>
                <TextView
                    android:id="@+id/bestval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/blue"
                    android:text="@string/n0"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moves"
                    android:textColor="@color/purple"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/moveval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/n0"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="20sp"/>
            </LinearLayout>


        </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/whitecard"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
                <Button
                    android:id="@+id/b1"
                    style="@style/button"/>

                <Button
                    android:id="@+id/b2"
                    style="@style/button" />
                <Button
                    android:id="@+id/b3"
                    style="@style/button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
                <Button
                    android:id="@+id/b4"
                    style="@style/button"/>
                <Button
                    android:id="@+id/b5"
                    style="@style/button"/>
                <Button
                    android:id="@+id/b6"
                    style="@style/button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
                <Button
                    android:id="@+id/b7"
                    style="@style/button"/>
                <Button
                    android:id="@+id/b8"
                    style="@style/button"/>
                <Button
                    android:id="@+id/b9"
                    style="@style/button"/>
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backroot"
            android:padding="4dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/whitecard">

                <Button
                    android:id="@+id/restart"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:background="@drawable/restarticon"
                    android:layout_marginStart="16dp"/>

                <Button
                    android:id="@+id/seesolution"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:background="@drawable/solution"
                    android:layout_marginStart="16dp"
                    />

                <Button
                    android:id="@+id/newgame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="8dp"
                    android:background="@drawable/menudark"
                    android:layout_marginStart="16dp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</ScrollView>
